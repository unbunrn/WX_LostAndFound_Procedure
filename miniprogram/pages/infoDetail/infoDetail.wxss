.body{
  position: relative;
  padding-bottom: 160rpx;
}
/* 轮播图 */
.banner{ 
  height: 55vh;
}
.banner_image{
  width: 100%;
  height: 55vh;
}
.name{
  background-color: #f5efef;
  margin-top: 10rpx;
  padding: 20rpx;
  font-weight: bold;

}
.container{
  background-color: #f5efef;
  margin-top: 20rpx;
}
.container .item{
  padding: 20rpx;
  display: flex;
  align-items: center;
  word-break: break-all;
}
.container .item .label{
  width: 70rpx;
  color: #999999;
  font-size: 26rpx;
  margin-right: 10rpx;
}

.bottom{
  display: flex;
  background-color:#f5efef;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  position: absolute;
  width: 100%;
  bottom: 20rpx;  

}

.bottom .bottom_left{
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 30rpx;
  padding: 10rpx;
  width: 70%;
  color: #999999;
}
.bottom .bottom_left .icon_com{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.bottom .bottom_right .icon_col{
  width: 40rpx;
  height: 40rpx;
}
.bottom_right{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
}


