.body {
  background-color: #fff;
  width: 100vw;
  min-height: 100vh;
}

.search-info {
  padding: 20rpx 30rpx;
  background-color: #f9f9f9;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.search-text, .search-images {
  margin-bottom: 15rpx;
}

.label {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  margin-right: 10rpx;
}

.content {
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
  gap: 10rpx;
}

.image-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
  overflow: hidden;
}

.image-item {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.image-error-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.image-error-placeholder text {
  font-size: 20rpx;
  color: #999;
  margin-top: 5rpx;
}

.result-stats {
  padding: 10rpx 30rpx;
  font-size: 24rpx;
  color: #999;
}

.lose_list {
  padding: 10rpx 20rpx;
}

.no-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  width: 100%;
}

.no-result-text {
  font-size: 32rpx;
  color: #333;
  margin-top: 30rpx;
  font-weight: bold;
}

.no-result-tip {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
}

.back-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width:300rpx;
  height:80rpx;
  line-height: 80rpx;
  background-color: #5050ff;
  color:white;
  font-size:28rpx;
  border-radius: 40rpx;
}

.no-result image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
} 